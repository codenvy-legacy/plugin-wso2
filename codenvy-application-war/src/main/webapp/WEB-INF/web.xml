<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

    <display-name>Codenvy IDE</display-name>

    <context-param>
        <param-name>everrest.exoplatform.standalone.config</param-name>
        <param-value>war:/WEB-INF/classes/conf/exo-configuration.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.everrest.exoplatform.servlet.EverrestExoContextListener$StandaloneContainerStarter</listener-class>
    </listener>
    <listener>
        <listener-class>org.everrest.websockets.WSConnectionTracker</listener-class>
    </listener>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.codenvy.ide.server.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SetCurrentIdentityFilter</filter-name>
        <filter-class>org.exoplatform.services.security.web.SetCurrentIdentityFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SetIdeUserFilter</filter-name>
        <filter-class>com.codenvy.sdk.SetIdeUserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SetEnvironmentContextFilter</filter-name>
        <filter-class>com.codenvy.ide.server.SetEnvironmentContextFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/websocket/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SetCurrentIdentityFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SetCurrentIdentityFilter</filter-name>
        <url-pattern>/websocket/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SetIdeUserFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SetIdeUserFilter</filter-name>
        <url-pattern>/websocket/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SetEnvironmentContextFilter</filter-name>
        <url-pattern>/rest/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SetEnvironmentContextFilter</filter-name>
        <url-pattern>/websocket/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>EverrestServlet</servlet-name>
        <servlet-class>org.everrest.exoplatform.servlet.EverrestExoServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ExoIdeWebSocketServlet</servlet-name>
        <servlet-class>org.exoplatform.ide.websocket.ExoIdeWebSocketServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.codenvy.commons.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GitServlet</servlet-name>
        <servlet-class>org.eclipse.jgit.http.server.GitServlet</servlet-class>
        <init-param>
            <param-name>base-path</param-name>
            <param-value>${com.codenvy.vfs.rootdir}/</param-value>
        </init-param>
        <init-param>
            <param-name>export-all</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/_app/Application.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/_app/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>GitServlet</servlet-name>
        <url-pattern>/_git/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/_app/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/_app/main</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EverrestServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExoIdeWebSocketServlet</servlet-name>
        <url-pattern>/websocket/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>app</web-resource-name>
            <url-pattern>/login</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>developer</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>codenvy</realm-name>
    </login-config>

    <security-role>
        <description>the user role</description>
        <role-name>developer</role-name>
    </security-role>

</web-app>