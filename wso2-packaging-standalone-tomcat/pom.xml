                                    <artifactId>parts-api-tutorial</artifactId>
                                    <type>zip</type>
                                    <version>${codenvy.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip/tutorials</outputDirectory>
                                    <destFileName>parts-api-tutorial.zip</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>wizard-api-tutorial</artifactId>
                                    <type>zip</type>
                                    <version>${codenvy.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip/tutorials</outputDirectory>
                                    <destFileName>wizard-api-tutorial.zip</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>editor-api-tutorial</artifactId>
                                    <type>zip</type>
                                    <version>${codenvy.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip/tutorials</outputDirectory>
                                    <destFileName>editor-api-tutorial.zip</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>gin-tutorial</artifactId>
                                    <type>zip</type>
                                    <version>${codenvy.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip/tutorials</outputDirectory>
                                    <destFileName>gin-tutorial.zip</destFileName>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>gist-extension</artifactId>
                                    <type>zip</type>
                                    <version>${codenvy.version}</version>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}/packager-conf/zip/tutorials</outputDirectory>
                                    <destFileName>gist-extension.zip</destFileName>
                                </artifactItem>
