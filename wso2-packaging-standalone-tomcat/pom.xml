                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-private-dependencies-for-sdk</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.codenvy.ide</groupId>
                                    <artifactId>codenvy-sdk-private-dependencies</artifactId>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>repo.zip</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Prepare Tomcat</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <unzip dest="${project.build.directory}" src="${project.build.directory}/packager-conf/zip/tomcat.zip">
                                    <patternset>
                                        <exclude name="**/ROOT/**" />
                                        <exclude name="**/docs/**" />
                                        <exclude name="**/examples/**" />
                                        <exclude name="**/manager/**" />
                                        <exclude name="**/host-manager/**" />
                                    </patternset>
                                </unzip>
                                <move file="${project.build.directory}/apache-tomcat-${tomcat.version}" tofile="${project.build.directory}/tomcat-ide" />
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-ide">
                                    <fileset dir="${basedir}/src/main/resources/tomcat" />
                                </copy>
                                <chmod dir="${project.build.directory}/tomcat-ide/bin" includes="**/*.sh" perm="+x" />
                                <!-- Copy resources to re-build Codenvy IDE with 3rd-party extensions. -->
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-ide/sdk-resources">
                                    <fileset dir="${project.build.directory}/../../wso2-application-war" includes="src/**, pom.xml" />
                                </copy>
                                <copy overwrite="true" todir="${project.build.directory}/tomcat-ide/sdk-resources">
                                    <fileset dir="${project.build.directory}/../../wso2-application-war" includes="src/**, pom.xml" />
                                </copy>
                                <unwar dest="${project.build.directory}/packager-conf/war/ide" src="${project.build.directory}/packager-conf/war/wso2-application-war-${project.version}.war" />
                                <move todir="${project.build.directory}/packager-conf/war/ide/_app">
                                    <fileset dir="${project.build.directory}/packager-conf/war/ide/_app/" />
                                </move>
                                <move todir="${project.build.directory}/tomcat-ide/tutorials">
                                    <fileset dir="${project.build.directory}/packager-conf/zip/tutorials" />
                                </move>
                                <war destfile="${project.build.directory}/tomcat-ide/webapps/ide.war" needxmlfile="false">
                                    <fileset dir="${project.build.directory}/packager-conf/war/ide" />
                                </war>
                                <unwar dest="${project.build.directory}/packager-conf/war/site" src="${project.build.directory}/packager-conf/war/codenvy-ide-site-war-3.0.0-M8.war" />
                                <copy overwrite="true" todir="${project.build.directory}/packager-conf/war/site">
                                    <fileset dir="${basedir}/src/main/resources/site" />
                                </copy>
                                <war destfile="${project.build.directory}/packager-conf/war/codenvy-ide-site-war-3.0.0-M8.war.war" needxmlfile="false">
                                    <fileset dir="${project.build.directory}/packager-conf/war/site" />
                                </war>
                                <unwar dest="${project.build.directory}/packager-conf/war/api" src="${project.build.directory}/packager-conf/war/codenvy-api-war-${codenvy.version}.war" />
                                <copy overwrite="true" todir="${project.build.directory}/packager-conf/war/api/WEB-INF/lib">
                                    <fileset dir="${project.build.directory}/packager-conf/jar/" />
                                </copy>
                                <copy overwrite="true" todir="${project.build.directory}/packager-conf/war/api/WEB-INF/classes/codenvy">
                                    <fileset dir="${basedir}/src/main/resources/api" />
                                </copy>
                                <war destfile="${project.build.directory}/packager-conf/war/codenvy-api-war-${codenvy.version}.war" needxmlfile="false">
                                    <fileset dir="${project.build.directory}/packager-conf/war/api" />
                                </war>
                                <copy file="${project.build.directory}/packager-conf/war/exo-ide-git-server-${org.exoplatform.ide.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/git.war" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-api-war-${codenvy.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/api.war" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-ide-site-war-3.0.0-M8.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/site.war" />
                                <copy file="${project.build.directory}/packager-conf/war/exo-ide-codeassistant-storage-${org.exoplatform.ide.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/codeassistant-storage.war" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-organization-packaging-api-war-${com.codenvy.organization.version}.war" overwrite="true" tofile="${project.build.directory}/tomcat-ide/webapps/userdb.war" />
                                <unzip dest="${project.build.directory}/tomcat-ide" src="${project.build.directory}/ide-codeassistant-lucene-index.zip" />
                                <unzip dest="${project.build.directory}/tomcat-ide" src="${project.build.directory}/repo.zip" />
                                <chmod dir="${project.build.directory}/tomcat-ide" includes="*.sh" perm="+x" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <!-- Create the distribution zip and attach it to maven -->
                    <execution>
                        <id>tomcat-zip</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <updateOnly>false</updateOnly>
                            <descriptors>
                                <descriptor>${project.basedir}/src/main/assembly/tomcat-archive.xml</descriptor>
                            </descriptors>
                            <finalName>codenvy-${codenvy.version}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
