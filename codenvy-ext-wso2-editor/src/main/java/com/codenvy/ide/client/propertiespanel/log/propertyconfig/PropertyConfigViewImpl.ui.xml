<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field="locale" type="com.codenvy.ide.client.WSO2EditorLocalizationConstant"/>

    <ui:style>
        .addPropertyButtonStyle {
            margin-left: 20px;
            width: 80px;
            text-align: center;
        }

        .removePropertyButtonStyle {
            margin-top: 20px;
            margin-left: 20px;
            width: 80px;
            text-align: center;
        }

        .okButtonStyle {
            margin-left: 20px;
            margin-top: 164px;
            width: 80px;
            text-align: center;
        }

        .cancelButtonStyle {
            margin-left: 500px;
            margin-top: 20px;
            width: 80px;
            text-align: center;
        }

        .tableStyle {
            width: 100%;
            text-align: left;
        }

        .centerPanel {
            margin-left: 10px;
            background: lightgrey;
            border: 2px solid gray;
        }

        .northPanel {
            margin-left: 20px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="700px" height="450px">

        <g:north size="140">
            <g:DockLayoutPanel>
                <g:west size="300">
                    <g:FlowPanel addStyleNames="{style.northPanel}">
                        <g:Label text="{locale.logCategory}"/>
                        <g:ListBox ui:field="logCategoryListBox"/>

                        <g:Label text="{locale.logLevel}"/>
                        <g:ListBox ui:field="logLevelListBox"/>

                        <g:Label text="{locale.logSeparator}"/>
                        <g:TextBox ui:field="logSeparatorTextBox"/>

                        <g:Label text="{locale.properties}"/>
                    </g:FlowPanel>
                </g:west>

                <g:east size="400">
                    <g:FlowPanel>
                        <g:Label text="{locale.logName}"/>
                        <g:TextBox ui:field="nameTextBox"/>

                        <g:Label text="{locale.valueExpression}"/>
                        <g:TextBox ui:field="valueExpressionTextBox"/>
                    </g:FlowPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:north>

        <g:center>
            <g:FlowPanel addStyleNames="{style.centerPanel}">
                <g:ScrollPanel width="100%" height="100%">
                    <c:CellTable ui:field="tableOfProperties" addStyleNames="{style.tableStyle}"/>
                </g:ScrollPanel>
            </g:FlowPanel>
        </g:center>

        <g:east size="120">
            <g:FlowPanel>
                <g:Button ui:field="btnAdd" text="{locale.buttonAdd}" addStyleNames="{style.addPropertyButtonStyle}"/>
                <g:Button ui:field="btnEdit" text="{locale.buttonEdit}" addStyleNames="{style.removePropertyButtonStyle}"/>
                <g:Button ui:field="btnRemove" text="{locale.buttonRemove}" addStyleNames="{style.removePropertyButtonStyle}"/>
                <g:Button ui:field="btnSaveChanges" text="{locale.buttonOk}" width="100" addStyleNames="{style.okButtonStyle}"/>
            </g:FlowPanel>
        </g:east>

        <g:south size="60">
            <g:FlowPanel>
                <g:Button ui:field="btnCancel" text="{locale.buttonCancel}" width="100" addStyleNames="{style.cancelButtonStyle}"/>
            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>