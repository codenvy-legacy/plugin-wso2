<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <ui:style>
        .nameSpacePropertyLabelStyle {
            margin-top: 10px;
            margin-left: 20px;
        }

        .selectXpathButtonStyle {
            margin-left: 30px;
            margin-top: 10px;
        }

        .namespacePropertyTextBoxStyle {
            margin-left: 10px;
            width: 540px;
        }

        .nameSpacesLabelStyle {
            margin-top: 5px;
            margin-left: 20px;
        }

        .prefixLabelStyle {
            float: left;
            margin-left: 10px;
            margin-top: 5px;
        }

        .uriLabelStyle {
            float: left;
            margin-left: 20px;
            margin-top: 5px;
        }

        .uriTextBoxStyle {
            float: left;
            margin-left: 20px;
            margin-top: 5px;
            width: 250px;
        }

        .prefixTextBoxStyle {
            float: left;
            margin-top: 5px;
            margin-left: 10px;
            width: 200px;
        }

        .tablePanelStyle {
            margin-left: 10px;
            background: lightgray;
            width: 570px;
            height: 230px;
        }

        .addButtonStyle {
            margin-left: 20px;
            width: 80px;
        }

        .editRemoveButtonStyle {
            margin-left: 20px;
            margin-top: 20px;
            width: 80px;
        }

        .cancelButtonStyle {
            margin-top: 20px;
            margin-left: 500px;
            width: 80px;
        }

        .okButtonStyle {
            margin-top: 20px;
            margin-left: 20px;
            width: 80px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="700px" height="450px">
        <g:north size="60">
            <g:FlowPanel>
                <g:Label text="Namespaced Property:" addStyleNames="{style.nameSpacePropertyLabelStyle}"/>
                <g:TextBox ui:field="logSeparatorTextBox" text="/default/expression"
                           addStyleNames="{style.namespacePropertyTextBoxStyle}"/>
                <g:Button ui:field="selectPathButton" text="Select XPath" addStyleNames="{style.selectXpathButtonStyle}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel>
                <g:north size="60">
                    <g:FlowPanel>
                        <g:Label text="Namespaces" addStyleNames="{style.nameSpacesLabelStyle}"/>
                        <g:Label text="Prefix:" addStyleNames="{style.prefixLabelStyle}"/>
                        <g:TextBox ui:field="prefixTextBox" addStyleNames="{style.prefixTextBoxStyle}"/>
                        <g:Label text="URI:" addStyleNames="{style.uriLabelStyle}"/>
                        <g:TextBox ui:field="uriTextBox" addStyleNames="{style.uriTextBoxStyle}"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:FlowPanel addStyleNames="{style.tablePanelStyle}">
                        <c:CellTable ui:field="nameSpacesTable"/>
                    </g:FlowPanel>
                </g:center>
                <g:east size="120">
                    <g:FlowPanel>
                        <g:Button ui:field="addNamespaceButton" text="Add" addStyleNames="{style.addButtonStyle}"/>
                        <g:Button ui:field="editNamespaceButton" text="Edit" addStyleNames="{style.editRemoveButtonStyle}"/>
                        <g:Button ui:field="removeNamespaceButton" text="Remove" addStyleNames="{style.editRemoveButtonStyle}"/>
                    </g:FlowPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:center>
        <g:south size="60">
            <g:FlowPanel>
                <g:Button ui:field="cancelButton" text="Cancel" addStyleNames="{style.cancelButtonStyle}"/>
                <g:Button ui:field="okButton" text="OK" addStyleNames="{style.okButtonStyle}"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>