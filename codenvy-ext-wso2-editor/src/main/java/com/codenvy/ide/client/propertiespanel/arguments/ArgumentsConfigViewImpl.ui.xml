<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field="locale" type="com.codenvy.ide.client.WSO2EditorLocalizationConstant"/>

    <ui:style>
        .addPropertyButtonStyle {
            margin-left: 20px;
            margin-top: 30px;
            width: 80px;
            text-align: center;
        }

        .removePropertyButtonStyle {
            margin-top: 20px;
            margin-left: 20px;
            width: 80px;
            text-align: center;
        }

        .tableStyle {
            width: 100%;
            text-align: left;
        }

        .centerPanel {
            margin-left: 10px;
        }

        .descriptionLabel {
            margin: 10px 10px;
        }

        .alignLeft {
            float: left;
            margin-left: 10px;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" width="650px" height="300px">

        <g:center>
            <g:FlowPanel addStyleNames="{style.centerPanel}">
                <g:Label text="{locale.arguments}" addStyleNames="{style.descriptionLabel}"/>

                <g:FlowPanel addStyleNames="{style.alignLeft}">
                    <g:Label text="{locale.columnType}"/>
                    <g:ListBox ui:field="typeValue" height="24px" width="156px"/>
                </g:FlowPanel>

                <g:FlowPanel addStyleNames="{style.alignLeft}">
                    <g:Label text="{locale.valueExpression}"/>
                    <g:TextBox ui:field="valueExpressionTextBox" height="17px"/>
                </g:FlowPanel>

                <g:FlowPanel addStyleNames="{style.alignLeft}">
                    <g:Label text="{locale.columnEvaluator}"/>
                    <g:ListBox ui:field="valueEvaluator" height="24px" width="156px"/>
                </g:FlowPanel>

                <g:ScrollPanel width="100%" height="100%">
                    <c:CellTable ui:field="args" addStyleNames="{style.tableStyle}"/>
                </g:ScrollPanel>
            </g:FlowPanel>
        </g:center>

        <g:east size="120">
            <g:FlowPanel>
                <g:Button ui:field="btnAdd" text="{locale.buttonAdd}" addStyleNames="{style.addPropertyButtonStyle}"/>
                <g:Button ui:field="btnEdit" text="{locale.buttonEdit}" addStyleNames="{style.removePropertyButtonStyle}"/>
                <g:Button ui:field="btnRemove" text="{locale.buttonRemove}" addStyleNames="{style.removePropertyButtonStyle}"/>
            </g:FlowPanel>
        </g:east>

    </g:DockLayoutPanel>

</ui:UiBinder>