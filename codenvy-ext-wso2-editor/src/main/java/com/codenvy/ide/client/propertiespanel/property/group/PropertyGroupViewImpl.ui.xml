<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='res' type='com.codenvy.ide.client.EditorResources'/>

    <ui:style>
        .mainPanel {
            width: 100%;
            margin: 1px 0 1px 0;
        }

        .headerPanel {
            width: 100%;
            height: 18px;
        }

        .icon {
            height: 12px;
            width: 15px;
            float: left;
            transition: all 300ms;
            position: relative;
            top: 50%;
            margin-top: -13px;
            margin-right: -5px;
        }

        .iconPanel {
            position: absolute;
            right: 10px;
        }

        .title {
            margin-left: 7px;
            margin-top: 3px;
        }
    </ui:style>

    <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">

        <g:FlowPanel ui:field="groupNamePanel"
                     addStyleNames="{style.headerPanel} {res.editorCSS.propertyHeaderPanel} {res.editorCSS.fontStyle}
                     {res.editorCSS.panelHover}">
            <g:Label ui:field="title" addStyleNames="{style.title}"/>

            <g:FlowPanel addStyleNames="{style.iconPanel}">
                <g:SimpleLayoutPanel ui:field="icon" addStyleNames="{style.icon}"/>
            </g:FlowPanel>
        </g:FlowPanel>

        <g:FlowPanel ui:field="propertiesPanel" width="100%"/>

    </g:FlowPanel>

</ui:UiBinder>