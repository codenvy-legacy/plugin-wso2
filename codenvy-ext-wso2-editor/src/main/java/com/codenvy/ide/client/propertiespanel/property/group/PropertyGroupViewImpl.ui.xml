<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @eval backgroundColor com.codenvy.ide.api.ui.theme.Style.getWindowHeaderBackground();
        @eval borderColor com.codenvy.ide.api.ui.theme.Style.getPartBackground();
        @eval selectionBackgroundColor com.codenvy.ide.api.ui.theme.Style.getSelectionBackground();

        .mainPanel {
            width: 100%;
            margin: 1px 0 1px 0;
        }

        .headerPanel {
            width: 100%;
            height: 30px;
            background: backgroundColor;
            border: 1px groove borderColor;
            cursor: pointer;
        }

        .headerPanel:hover {
            background: selectionBackgroundColor;
        }

        .icon {
            height: 12px;
            width: 12px;
            float: left;
            transition: all 300ms;

            position: relative;
            top: 50%;
            margin-top: -6px;
        }

        .iconPanel {
            position: absolute;
            right: 20px;
        }

        .title {
            position: relative;
            top: 7px;
            margin-left: 12px;
            font-size: 12px;
            font-weight: bold;
        }
    </ui:style>

    <g:FlowPanel ui:field="mainPanel" addStyleNames="{style.mainPanel}">

        <g:FlowPanel addStyleNames="{style.headerPanel}">
            <g:Label ui:field="title" addStyleNames="{style.title}"/>

            <g:FlowPanel addStyleNames="{style.iconPanel}">
                <g:SimpleLayoutPanel ui:field="icon" addStyleNames="{style.icon}"/>
            </g:FlowPanel>
        </g:FlowPanel>

        <g:FlowPanel ui:field="propertiesPanel" width="100%"/>

    </g:FlowPanel>

</ui:UiBinder>