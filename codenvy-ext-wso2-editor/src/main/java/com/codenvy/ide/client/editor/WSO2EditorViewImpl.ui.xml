<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="com.codenvy.ide.client.WSO2EditorLocalizationConstant"/>

    <ui:style>
        @eval backgroundColor com.codenvy.ide.api.ui.theme.Style.getPartBackground();

        .fullSize {
            width: 100%;
            height: 100%;
            background: backgroundColor;
        }

        .labelStyle {
            margin-top: 3px;
            margin-left: 5px;
            float: left;
        }

        .buttonPanelStyle {
            background-color: #656565;
            border-bottom: 1px solid #232323;
            box-shadow: 0 2px 5px 0 rgba(50, 50, 50, 0.75);
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
            font-size: 11px;
            color: #dbdbdb;
        }

        .buttonHideStyle {
            box-shadow: none;
            background: #656565;
            float: right;
            margin-right: 5px;
            border: 0px;
        }

        .buttonHideStyle:active {
            box-shadow: none;
            border: 0px;
        }

        .buttonHideStyle:hover {
            border-color: #656565;
        }

        .buttonShowStyle {
            background: backgroundColor;
            float: right;
            margin-right: 5px;
            border: 0px;
        }

        .buttonShowStyle:active {
            box-shadow: none;
            border: 0px;
        }

        .buttonShowStyle:hover {
            border-color: backgroundColor;
        }

        .buttonHideStyle > svg {
            -webkit-transform: rotate(90deg);
            -moz-transform: rotate(90deg);
            transform: rotate(90deg);

            float: left;
            margin-top: 2px;
            margin-left: 2px;
        }

        .buttonShowStyle > svg {
            -webkit-transform: rotate(270deg);
            -moz-transform: rotate(270deg);
            transform: rotate(270deg);

            float: left;
            margin-top: 2px;
            margin-left: 2px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{style.fullSize}">

        <g:west size="40">
            <g:SimpleLayoutPanel ui:field="toolbar" addStyleNames="{style.fullSize}"/>
        </g:west>

        <g:center>
            <g:SplitLayoutPanel ui:field="splitPanel">

                <g:center>
                    <g:ScrollPanel ui:field="workspace" addStyleNames="{style.fullSize}"/>
                </g:center>

                <g:south size="300">
                    <g:FlowPanel>

                        <g:FlowPanel height="22px" ui:field="buttonPanel" addStyleNames="{style.buttonPanelStyle}">
                            <g:Label text="{locale.panelLabelName}" addStyleNames="{style.labelStyle}"/>
                            <g:Button ui:field="hideBtn" addStyleNames="{style.buttonHideStyle}"/>
                        </g:FlowPanel>

                        <g:SimpleLayoutPanel ui:field="propertiesPanel" addStyleNames="{style.fullSize}"/>

                    </g:FlowPanel>
                </g:south>

            </g:SplitLayoutPanel>
        </g:center>

        <g:south size="20">
            <g:FlowPanel>
                <g:Button ui:field="showBtn" addStyleNames="{style.buttonShowStyle}" visible="false"/>
            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>