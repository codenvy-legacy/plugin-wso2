<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="com.codenvy.ide.client.WSO2EditorLocalizationConstant"/>
    <ui:with field="resource" type="com.codenvy.ide.client.EditorResources"/>

    <ui:style>
        @eval backgroundColor com.codenvy.ide.api.ui.theme.Style.getPartBackground();
        @eval tabBackgroundColor com.codenvy.ide.api.ui.theme.Style.getWindowHeaderBackground();
        @eval tabBorderColor com.codenvy.ide.api.ui.theme.Style.getTabBorderColor();

        .fullSize {
            width: 100%;
            height: 100%;
        }

        .labelStyle {
            margin-top: 3px;
            margin-left: 5px;
            float: left;
        }

        .buttonPanelStyle {
            background-color: tabBackgroundColor;
            border-bottom: 1px solid tabBorderColor;
            box-shadow: 0 2px 5px 0 rgba(50, 50, 50, 0.75);
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
            font-size: 12px;
            font-weight: bold;
        }

        .buttonHideStyle {
            box-shadow: none;
            background: tabBackgroundColor;
            float: right;
            margin-right: 5px;
            border: 0;
        }

        .buttonHideStyle:active {
            box-shadow: none;
            border: 0;
        }

        .buttonHideStyle:hover {
            background: tabBackgroundColor;
            border: 0 tabBackgroundColor;
        }

        .mainPropertiesPanel {
            border: 1px groove tabBackgroundColor;
        }

        .closeToolbarBtnStyle {
            width: 6px;
            height: 6px;
            float: right;
            margin-top: 7px;
            margin-right: 5px;
        }

        .labelToolbarStyle {
            width: 50%;
            float: left;
            margin-top: 1px;
            margin-left: 12px;
            position: relative;
        }

        .palettePanel {
            width: 100%;
            height: 20px;
        }
    </ui:style>

    <g:SplitLayoutPanel ui:field="mainPanel" addStyleNames="{style.fullSize}">

        <g:west size="180">
            <g:FlowPanel ui:field="toolbarPanel">

                <g:FlowPanel addStyleNames="{style.palettePanel},{resource.editorCSS.toolbarPalette}">
                    <g:Label text="{locale.toolbarPalette}"
                             addStyleNames="{style.labelToolbarStyle},{resource.editorCSS.toolbarTitleStyle}"/>
                    <g:Image ui:field="closeToolbarBtn" resource="{resource.toolbarPanelClose}"
                             addStyleNames="{style.closeToolbarBtnStyle}"/>
                </g:FlowPanel>

                <g:SimpleLayoutPanel ui:field="toolbar" addStyleNames="{resource.editorCSS.toolbarMainPanel},{style.fullSize}"/>
            </g:FlowPanel>
        </g:west>

        <g:east size="300">
            <g:FlowPanel ui:field="mainPropertiesPanel" addStyleNames="{style.mainPropertiesPanel}">

                <g:FlowPanel height="22px" ui:field="buttonPanel" addStyleNames="{style.buttonPanelStyle}">
                    <g:Label text="{locale.panelLabelName}" addStyleNames="{style.labelStyle}"/>
                    <g:Button ui:field="hideBtn" addStyleNames="{style.buttonHideStyle}"/>
                </g:FlowPanel>

                <g:SimpleLayoutPanel ui:field="propertiesPanel" addStyleNames="{style.fullSize}"/>

            </g:FlowPanel>
        </g:east>

        <g:center>
            <g:ScrollPanel ui:field="workspace" addStyleNames="{style.fullSize}"/>
        </g:center>

    </g:SplitLayoutPanel>

</ui:UiBinder>