<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @eval titleBackground com.codenvy.ide.api.ui.theme.Style.getWindowHeaderBackground();
        @eval borderColor com.codenvy.ide.api.ui.theme.Style.getTabBorderColor();

        .titlePanel {
            text-align: center;
            vertical-align: middle;
            font-weight: bold;
            width: 51px;
            height: 100%;
            background: titleBackground;
            border-right: 2px solid borderColor;
            border-left: 2px solid borderColor;
        }

        .title {
            position: relative;
            top: 50%;
            margin-top: -10px;
        }

        .focusPanel:focus {
            outline: none !important;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="focusPanel" addStyleNames="{style.focusPanel}" unit="PX">
        <g:west size="55">
            <g:FlowPanel addStyleNames="{style.titlePanel}">
                <g:Label ui:field="title" addStyleNames="{style.title}"/>
            </g:FlowPanel>
        </g:west>

        <g:center>
            <g:FlowPanel ui:field="body"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>