<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.client.EditorResources"/>

    <ui:style>
        .titlePanel {
            text-align: center;
            vertical-align: middle;
            font-weight: bold;
            width: 100%;
            height: 100%;
            background: #545454;
            border-right: 1px solid #000000;
            border-left: 1px solid #000000;
        }

        .title {
            position: relative;
            top: 50%;
            margin-top: -8px;
        }

        .focusPanel:focus {
            outline: none !important;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="focusPanel" addStyleNames="{style.focusPanel} {resources.editorCSS.branchBackground}" unit="PX">
        <g:west size="40">
            <g:FlowPanel ui:field="titlePanel" addStyleNames="{style.titlePanel}">
                <g:Label ui:field="title" addStyleNames="{style.title} {resources.editorCSS.fontStyle}"/>
            </g:FlowPanel>
        </g:west>

        <g:center>
            <g:FlowPanel ui:field="body"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>