<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .mainPanel {
            border: 1px solid #000000;
            box-shadow: 0 1px 7px 0 rgba(0, 0, 0, 0.75);
        }

        .leftPanel {
            background: #2a2a2a;
        }

        .iconAndTitlePanel {
            position: relative;
            top: 50%;
            margin-top: -32px;
        }

        .icon {
            padding-left: 15px;
            padding-top: 8px;
        }

        .title {
            text-align: center;
            font-weight: bold;
            font-family: "Helvetica Neue", serif;
            font-size: 11px;
            color: #dbdbdb;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
        }

        .headerPanel {
            background: #545454;
            width: 100%;
            height: 28px;
            border-bottom: 1px solid #404040;
        }

        .headerInnerPanel {
            border-bottom: 1px solid #000000;
            position: absolute;
        }

        .headerText {
            position: relative;
            top: 2px;
        }

        .fullSize {
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="mainPanel" width="86px" height="100px" addStyleNames="{style.mainPanel}" unit="PX">

        <g:west size="86">
            <g:DockLayoutPanel ui:field="leftPanel" addStyleNames="{style.leftPanel} {style.fullSize}" unit="PX">

                <g:north size="20">
                    <g:FlowPanel ui:field="headerPanel" width="100%" height="19px" addStyleNames="{style.headerPanel}">
                        <g:FlowPanel width="100%" height="18px" addStyleNames="{style.headerInnerPanel}">
                            <g:Label ui:field="header" addStyleNames="{style.title} {style.headerText}"/>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:north>

                <g:center>
                    <g:FlowPanel addStyleNames="{style.fullSize}">
                        <g:FlowPanel addStyleNames="{style.iconAndTitlePanel} {style.fullSize}">
                            <g:Label ui:field="title" addStyleNames="{style.title}"/>
                            <g:Image ui:field="icon" addStyleNames="{style.icon}"/>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:center>

            </g:DockLayoutPanel>
        </g:west>

        <g:center>
            <g:FlowPanel ui:field="rightPanel"/>
        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder>