<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        @eval elementBackground com.codenvy.ide.api.ui.theme.Style.getPartBackground();
        @eval titleBackground com.codenvy.ide.api.ui.theme.Style.getWindowHeaderBackground();
        @eval borderColor com.codenvy.ide.api.ui.theme.Style.getTabBorderColor();

        .mainPanel {
            border: 1px solid #000000;
            box-shadow: 0 1px 7px 0 rgba(0, 0, 0, 0.75);
        }

        .leftPanel {
            background: elementBackground;
        }

        .iconAndTitlePanel {
            position: relative;
            top: 50%;
            margin-top: -32px;
        }

        .icon {
            padding-left: 23px;
            padding-top: 8px;
        }

        .title {
            text-align: center;
            font-weight: bold;
        }

        .headerPanel {
            background: titleBackground;
            border-bottom: 2px solid borderColor;
            width: 100%;
            height: 28px;
        }

        .headerText {
            position: relative;
            top: 50%;
            margin-top: -10px;
        }

        .fullSize {
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel ui:field="mainPanel" width="100px" height="100px" addStyleNames="{style.mainPanel}" unit="PX">

        <g:west size="100">
            <g:DockLayoutPanel ui:field="leftPanel" addStyleNames="{style.leftPanel} {style.fullSize}" unit="PX">

                <g:north size="30">
                    <g:FlowPanel ui:field="headerPanel" addStyleNames="{style.headerPanel}">
                        <g:Label ui:field="header" addStyleNames="{style.title} {style.headerText}"/>
                    </g:FlowPanel>
                </g:north>

                <g:center>
                    <g:FlowPanel addStyleNames="{style.fullSize}">
                        <g:FlowPanel addStyleNames="{style.iconAndTitlePanel} {style.fullSize}">
                            <g:Label ui:field="title" addStyleNames="{style.title}"/>
                            <g:Image ui:field="icon" addStyleNames="{style.icon}"/>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:center>

            </g:DockLayoutPanel>
        </g:west>

        <g:center>
            <g:FlowPanel ui:field="rightPanel"/>
        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder>