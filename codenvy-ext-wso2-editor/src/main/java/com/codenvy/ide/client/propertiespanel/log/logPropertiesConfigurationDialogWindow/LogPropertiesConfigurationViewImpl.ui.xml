<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <ui:style>
        .addPropertyButtonStyle {
            margin-left: 20px;
            width: 80px;
            text-align: center;
        }

        .removePropertyButtonStyle {
            margin-top: 20px;
            margin-left: 20px;
            width: 80px;
            text-align: center;
        }

        .okButtonStyle {
            margin-left: 20px;
            margin-top: 166px;
            width: 80px;
            text-align: center;
        }

        .cancelButtonStyle {
            margin-left: 500px;
            margin-top: 20px;
            width: 80px;
            text-align: center;
        }

        .tableStyle {
            width: 100%;
            text-align: left;
        }

        .centerPanel {
            margin-left: 10px;
            background: lightgrey;
            border: 2px solid gray;
        }

        .northPanel {
            margin-left: 20px;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" width="700px" height="450px">
        <g:north size="140">
            <g:DockLayoutPanel>
                <g:west size="300">
                    <g:FlowPanel addStyleNames="{style.northPanel}">
                        <g:Label text="Log Category:"/>
                        <g:ListBox ui:field="logCategoryListBox"/>
                        <g:Label text="Log Level:"/>
                        <g:ListBox ui:field="logLevelListBox"/>
                        <g:Label text="Log Separator:"/>
                        <g:TextBox ui:field="logSeparatorTextBox"/>
                        <g:Label text="Properties: "/>
                    </g:FlowPanel>
                </g:west>
                <g:east size="400">
                    <g:FlowPanel>
                        <g:Label text="Name:"/>
                        <g:TextBox ui:field="nameTextBox"/>
                        <g:Label text="Value/Expression:"/>
                        <g:TextBox ui:field="valueExpressionTextBox"/>
                    </g:FlowPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <!--<g:ScrollPanel width="100%">-->
            <g:FlowPanel addStyleNames="{style.centerPanel}">
                <c:CellTable ui:field="tableOfProperties" addStyleNames="{style.tableStyle}"/>
            </g:FlowPanel>
            <!--</g:ScrollPanel>--><!--TODO all names to local-->
        </g:center>
        <g:east size="120">
            <g:FlowPanel>
                <g:Button ui:field="addPropertyToTable" text="Add..." addStyleNames="{style.addPropertyButtonStyle}"/>
                <g:Button ui:field="editPropertyButton" text="Edit" addStyleNames="{style.removePropertyButtonStyle}"/>
                <g:Button ui:field="removeProperty" text="Remove" addStyleNames="{style.removePropertyButtonStyle}"/>
                <g:Button ui:field="addPropertyToElement" text="OK" width="100" addStyleNames="{style.okButtonStyle}"/>
            </g:FlowPanel>
        </g:east>
        <g:south size="60">
            <g:FlowPanel>
                <g:Button ui:field="cancelWindow" text="Cancel" width="100" addStyleNames="{style.cancelButtonStyle}"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>