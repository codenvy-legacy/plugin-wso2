<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="com.codenvy.ide.ext.wso2.client.LocalizationConstant"/>
    <ui:with field="resources" type="com.codenvy.ide.ext.wso2.client.WSO2Resources"/>

    <ui:style>
        .mainPanel {
            width: 100%;
            height: 20px;
            border-top: 1px solid #000000;
            background: #2c2c2c;
        }

        .propertyBtnLocation {
            position: relative;
            left: 50%;
            margin-left: -32px;
        }

        .paletteBtnLocation {
            position: relative;
            left: 50%;
            margin-left: -30px;
        }

        .editorBtnLocation {
            position: relative;
            width: 300px;
            height: 20px;
            left: 50%;
            margin-left: -150px;
        }

        .editorBtnStyle {
            position: relative;
            float: left;
            width: 90px;
            margin-left: 3px;
        }

        .button {
            height: 14px;
            margin-top: 2px;
        }

        .iconPalette {
            float: left;
            margin-left: 3px;
            margin-top: 2px;
        }

        .labelPalette {
            position: relative;
            float: left;
            margin-left: 3px;
            margin-top: 1px;
        }

        .iconProperty {
            float: left;
            margin-left: 3px;
            margin-top: 2px;
        }

        .labelProperty {
            position: relative;
            float: left;
            margin-left: 3px;
            margin-top: 1px;
        }
    </ui:style>

    <g:DockLayoutPanel height="100%" width="100%" unit="PX">

        <g:south size="30">
            <g:DockLayoutPanel addStyleNames="{style.mainPanel}">

                <g:west size="180">
                    <g:FlowPanel>

                        <g:FlowPanel ui:field="toolbarBtn" width="60px"
                                     addStyleNames="{style.button} {style.paletteBtnLocation} {resources.wso2Style.editorButtonStyle}
                                     {resources.wso2Style.palettePropertyBtnStyle}">
                            <g:Image resource="{resources.paletteIcon}" addStyleNames="{style.iconPalette}"/>
                            <g:Label text="{locale.toolbarPalette}" addStyleNames="{style.labelPalette}"/>
                        </g:FlowPanel>

                    </g:FlowPanel>
                </g:west>

                <g:east size="200">
                    <g:FlowPanel>

                        <g:FlowPanel ui:field="showPropertyPanel" width="75px"
                                     addStyleNames="{style.button} {style.propertyBtnLocation} {resources.wso2Style.editorButtonStyle}
                                     {resources.wso2Style.palettePropertyBtnStyle}">
                            <g:Image resource="{resources.propertiesIcon}" addStyleNames="{style.iconProperty}"/>
                            <g:Label text="{locale.editorProperty}" addStyleNames="{style.labelProperty}"/>
                        </g:FlowPanel>

                    </g:FlowPanel>
                </g:east>

                <g:center>
                    <g:FlowPanel width="100%" height="100%">

                        <g:FlowPanel addStyleNames="{style.editorBtnLocation}">

                            <g:Button text="{locale.editorText}" ui:field="textEditorChoose" height="16px"
                                      addStyleNames="{style.button} {style.editorBtnStyle} {resources.wso2Style.editorButtonStyle}"/>
                            <g:Button text="{locale.editorGraphical}" ui:field="graphicalEditorChoose" height="16px"
                                      addStyleNames="{style.button} {style.editorBtnStyle} {resources.wso2Style.editorButtonStyle}"/>
                            <g:Button text="{locale.editorAssociate}" ui:field="associateEditorChoose" height="16px"
                                      addStyleNames="{style.button} {style.editorBtnStyle} {resources.wso2Style.editorButtonStyle}"/>

                        </g:FlowPanel>

                    </g:FlowPanel>
                </g:center>

            </g:DockLayoutPanel>
        </g:south>

        <g:center>
            <g:SimplePanel ui:field="mainPanel"/>
        </g:center>

    </g:DockLayoutPanel>

</ui:UiBinder>