<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>

    <ui:with field='locale' type='com.codenvy.ide.ext.wso2.client.LocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.wso2.client.WSO2Resources'/>


    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="350px" height="90px" addStyleNames="{style.emptyBorder}">

        <g:north size="30.0">
            <g:HTML ui:field="message"/>
        </g:north>

        <g:north size="50.0">

            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{style.spacing}">

                <g:center>
                    <g:TextBox width="340px" height="16px" ui:field="fileName"/>
                </g:center>

            </g:DockLayoutPanel>

        </g:north>

        <g:south size="26.0">

            <g:FlowPanel>


                <c:Button addStyleNames="{style.alignBtn}" text="{locale.wso2ButtonCancel}" width="60px" size="SMALL" type="DANGER"
                          ui:field="btnCancel"/>

                <c:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.wso2ButtonOverwrite}" width="60px" size="SMALL"
                          type="SUCCESS" ui:field="btnOverwrite"/>

                <c:Button addStyleNames="{style.alignBtn}" text="{locale.wso2ButtonRename}" width="60px" size="SMALL"
                          type="SUCCESS" ui:field="btnRename"/>
            </g:FlowPanel>

        </g:south>

    </g:DockLayoutPanel>


</ui:UiBinder>