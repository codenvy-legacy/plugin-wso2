<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='locale' type='com.codenvy.ide.ext.wso2.client.LocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.wso2.client.WSO2Resources'/>


    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="350px" height="165px" addStyleNames="{style.emptyBorder}">

        <g:north size="50.0">

            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{style.spacing}">

                <g:north size="20.0">
                    <g:Label text="{locale.wso2FileNameTitle}"/>
                </g:north>

                <g:west size="25.0">
                    <g:RadioButton ui:field="useLocalPath" name="type"/>
                </g:west>

                <g:center>
                    <g:FormPanel ui:field="uploadForm"/>
                </g:center>

            </g:DockLayoutPanel>

        </g:north>

        <g:north size="50.0">

            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{style.spacing}">

                <g:north size="20.0">
                    <g:Label text="{locale.wso2UrlLabelTitle}"/>
                </g:north>

                <g:west size="25.0">
                    <g:RadioButton ui:field="useUrl" name="type"/>
                </g:west>

                <g:center>
                    <g:TextBox width="313px" ui:field="url"/>
                </g:center>

            </g:DockLayoutPanel>

        </g:north>

        <g:south size="26.0">

            <g:FlowPanel>
                <g:Button addStyleNames="{style.alignBtn}" text="{locale.wso2ButtonCancel}" width="60px" ui:field="btnCancel"/>

                <g:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.wso2ButtonImport}" width="60px"
                          ui:field="btnImport"/>
            </g:FlowPanel>

        </g:south>

        <g:north size="50.0">
            <g:HTML ui:field="message" addStyleNames="{res.wso2Style.importErrorFont}"/>
        </g:north>

    </g:DockLayoutPanel>


</ui:UiBinder>